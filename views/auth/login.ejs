<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<body>
    
<main>
    <% if (errorMessage) { %>
        <div class="user-message user-message--error"><%= errorMessage %></div>
    <% } %>
    <% if (normMessage) { %>
        <div class="user-message "><%= normMessage %></div>
    <% } %>
    <div class="signup-link">
        <p><a href="/signup">Click here to Sign up if you don't have an account.</a></p>
    </div>
<div class="form__page">
    <form class="login-form small" action="/login" method="POST">
        <div class="form-control">
            <label for="email">E-Mail</label>
            <input 
            class="<%=validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
            type="email" 
            name="email" 
            id="email" 
            value="<%= oldInput.email %>"> 
        </div>
        <div class="form-control">
            <label for="password">Password</label>
            <input 
            class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
            type="password" 
            name="password" 
            id="password" 
            value="<%= oldInput.password %>">
        </div>
        
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div class="form-submit-btn">
            <button class="btn" type="submit">Login</button>
        </div>
        </form>
        <div class="centered password-link">
            <a href="/reset">Forgot Password?</a>
        </div>
</div><!--signup__page-->

</main>

</body>

<%- include('../includes/footer.ejs')%>

